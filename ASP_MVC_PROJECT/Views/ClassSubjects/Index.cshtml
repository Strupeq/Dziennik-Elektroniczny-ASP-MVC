@model IEnumerable<ASP_MVC_PROJECT.Models.ClassSubject>

@{
    ViewBag.Title = "Lista przedmiotów";
}

<h2>Lista przedmiotów przypisanych do klas</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Class.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Name)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ClassSubjectID })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>
