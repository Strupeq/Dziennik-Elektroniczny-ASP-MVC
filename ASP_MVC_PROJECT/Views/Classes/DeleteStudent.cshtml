@model ASP_MVC_PROJECT.Models.ApplicationUser

@{
    ViewBag.Title = "DeleteStudent";
}

<h3>Jesteś pewien, że chcesz usunąć tego ucznia z klasy?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imię
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Wróć do listy uczniów", "Index")
        </div>
    }
</div>
