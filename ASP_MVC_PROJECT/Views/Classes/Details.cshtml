@model ASP_MVC_PROJECT.Models.Class

@{
    ViewBag.Title = "Details";
}

<h2>Klasa @Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Wychowawca:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClassTeacher.Name)
            @Html.DisplayFor(model => model.ClassTeacher.Surname)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <h4>Lisa uczniów</h4>
</div>
<table class="table">
    <tr>
        <th>
            Nr
        </th>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
        </th>
    </tr>
    @{var i = 0;}
    @foreach (var item in Model.Students)
    {
        i += 1;
<tr>
    <td>
        @i
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.ActionLink("Usuń", "DeleteStudent", new { id = item.Id })
    </td>
</tr>
    }

</table>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.ClassID }) |
    @Html.ActionLink("Cofnij", "Index") |
    @Html.ActionLink("Dodaj ucznia", "AddStudent", new { classId = Model.ClassID })
</p>
