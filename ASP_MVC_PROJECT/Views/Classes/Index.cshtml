@model IEnumerable<ASP_MVC_PROJECT.Models.Class>

@{
    ViewBag.Title = "Lista klas";
}

<h2>Lista klas</h2>
<br />

<table class="table">
    <tr>
        <th>
            Nazwa klasy
        </th>
        <th>
            Wychowawca
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ClassTeacher.Name)
        @Html.DisplayFor(modelItem => item.ClassTeacher.Surname)
    </td>
    <td>
        @Html.ActionLink("Szczegóły", "Details", new { id = item.ClassID })
    </td>
</tr>
}
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
